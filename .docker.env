#Image tag
NODE_IMAGE=node:16.16.0-alpine
DB_IMAGE=postgres:14.4-alpine

# App
NODE_ENV=local
APP_NAME=happy-care-server
APP_ENV=development
APP_LANGUAGE=en
APP_TZ=Asia/Ho_Chi_Minh

APP_VERSION=0.0.1
